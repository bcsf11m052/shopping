<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
@model TermProject.Models.Admin
<head>
    @{
        Layout = "~/views/shared/_Layout.cshtml";
    }
    <title>Clothes Fasion</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" />
</head>
<body>
    <div id="body">
        <h2><em>Admin Login</em></h2>
    </div>
    <div id="black-tl">
        <div id="black-tr">
            <div id="black-br">
                <div id="black-bl">

                    @using (Html.BeginForm("Admin", "product", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <table>
                            <tr>
                                <td>
                                    <div class="editor-label">
                                        @Html.LabelFor(model => model.AdminName)
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextBoxFor(model => model.AdminName)
                                        @Html.ValidationMessageFor(model => model.AdminName)
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="editor-label">
                                        @Html.LabelFor(model => model.Password)
                                    </div>
                                    <div class="editor-field">
                                        @Html.TextBoxFor(model => model.Password, new { type = "password" })
                                        @Html.ValidationMessageFor(model => model.Password)
                                        <p>
                                            <input type="submit" value="Login" />
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    }
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
