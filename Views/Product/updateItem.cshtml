<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
@model TermProject.Models.Products
<head>
    @{
        Layout = "~/views/shared/_Layout.cshtml";
    }
    <title>Clothes Fasion</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" />
</head>
<body>
    <div id="body">
        <h2><em>Update Item</em></h2>
        @Html.ActionLink("Admin Menu", "Admin", "Product")
    </div>
    <div id="black-tl">
        <div id="black-tr">
            <div id="black-br">
                <div id="black-bl">
                    <form class="form" method="post" action="/Product/UpdateConform/@Model.Id">
                        <table>
                            <tbody>
                                <tr>
                                    <td>
                                        <b>@Html.LabelFor(m => m.Name)</b>
                                    </td>
                                    <td>
                                        @*<input type="text" value="@Model.Name" name="Name" />*@
                                        @Html.TextBoxFor(m => m.Name, new {type="text", value="@Model.Name"})
                                        <br />
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <b>@Html.LabelFor(m => m.Image)</b>
                                    </td>
                                    <td>
                                        @*<input type="text" value="@Model.Name" name="Name" />*@
                                        @Html.TextBoxFor(m => m.Image, new { type = "File", value = "@Model.Image" })
                                        <br />
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <b>@Html.LabelFor(m => m.Name)</b>
                                    </td>
                                    <td>
                                        @*<input type="text" class="form-control" value="@Model.Price" name="Price" />*@
                                        @Html.TextBoxFor(m => m.Price, new { type = "text", value = "@Model.Price" })
                                        <br />
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <b>Code</b>
                                    </td>
                                    <td>
                                        @*<input type="text" value="@Model.Code" name="Code" />*@
                                        @Html.TextBoxFor(m => m.Code, new { type = "text", value = "@Model.Code" })
                                        <br />
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <b>Category Id </b>
                                    </td>
                                    <td>
                                        @*<input type="text" class="form-control" value="@Model.Cid" name="Cid" />*@
                                        @Html.TextBoxFor(m => m.Cid, new { type = "text", value = "@Model.Cid" })
                                        <br />
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        <b>Description</b>
                                    </td>
                                    <td>
                                        @*<input type="text" class="form-control" value="@Model.Description" name="Description" />*@
                                        @Html.TextBoxFor(m => m.Description, new { type = "text", value = "@Model.Description" })
                                        <br />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <br />

                        <input type="submit" value="Update" />

                    </form>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
