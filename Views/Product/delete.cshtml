<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    @{
        Layout = "~/views/shared/_Layout.cshtml";
    }
    <title>Clothes Fasion</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/Content/style.css" type="text/css" />
</head>
<body>
    <div id="body">
        <h2><em>Delete Item</em></h2>
        @Html.ActionLink("Admin Menu", "Admin", "Product")
    </div>
    <div id="black-tl">
        <div id="black-tr">
            <div id="black-br">
                <div id="black-bl">
                    <table border="1">
                        <tr>
                            <td>Delete from here</td>
                            <td>Id</td>
                            <td>Name</td>
                            <td>Image</td>
                            <td>Price</td>
                            <td>Code</td>
                            <td>Category</td>
                            <td>Description</td>
                        </tr>
                        @foreach(var x in Model)
                        {
                            <tr>
                                <td>
                                    <a href="DeleteItem/@x.Id">Delete</a>
                                </td>
                                <td>@x.Id</td>
                                <td>@x.Name</td>
                                <td><img src="~/images/@x.Image" width="100" height="100" /></td>
                                <td>@x.Price</td>
                                <td>@x.Code</td>
                                <td>@x.Cid</td>
                                <td>@x.Description</td>
                            </tr>
                        }
                    </table>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
